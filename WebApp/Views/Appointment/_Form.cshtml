@model WebApp.Dtos.Appointment.CreateAppointmentDto
<input type="hidden" value="@Model.DossierId" asp-for="DossierId">
@if (Model == null)
{
    <div class="form-group">
        <label asp-for="TreatmentDate" class="control-label"></label>
        <input type="datetime-local" class="form-control" asp-for="TreatmentDate" value="" id="TreatmentDate">
        <span asp-validation-for="TreatmentDate" class="text-danger"></span>
    </div>
}
else
{
    <div class="form-group">
        <label asp-for="TreatmentDate" class="control-label"></label>
        <input type="datetime-local" class="form-control" asp-for="TreatmentDate" id="TreatmentDate">
        <span asp-validation-for="TreatmentDate" class="text-danger"></span>
    </div> 
}

@if (Model.Id != 0)
{
    <input type="hidden" asp-for="Id" value="@Model.Id">

}
@if (User.IsInRole("Staff"))
{

<div class="form-group">
    <label asp-for="PracticionerId" class="control-label"></label>
    <select class="form-control" asp-for="PracticionerId" asp-items="Model.Staff" id="PracticionerId">
    </select>
    <span asp-validation-for="PracticionerId" class="text-danger"></span>
</div>
}
else {
<div class="form-group">
    <label asp-for="PracticionerId" class="control-label"></label>
    <select class="form-control" asp-for="PracticionerId" asp-items="Model.Staff" id="PracticionerId" disabled>
    </select>
    <span asp-validation-for="PracticionerId" class="text-danger"></span>
</div>
}
<div class="form-group">
    <label asp-for="Room" class="control-label"></label>
    <select disabled class="form-control" asp-for="Room">
        <option selected  value="None">None</option>
        <option value="PracticeHall">Practice Hall</option>
        <option value="TreatmentRoom">Treatment Room</option>
    </select>
    <span asp-validation-for="Room" class="text-danger"></span>
</div>

<div class="col">
    <div class="form-group">
        <input type="submit" value="afspraak aanmaken" class="btn btn-primary btn-user btn-block"/>
    </div>
</div>