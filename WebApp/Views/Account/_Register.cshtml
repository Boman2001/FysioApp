@model WebApp.Dtos.Auth.RegisterDto

<div class="form-group">
    <label asp-for="FirstName" class="control-label"></label>
    <input asp-for="FirstName" class="form-control"/>
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Preposition" class="control-label"></label>
    <input asp-for="Preposition" class="form-control"/>
    <span asp-validation-for="Preposition" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="LastName" class="control-label"></label>
    <input asp-for="LastName" class="form-control"/>
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Email" class="control-label"></label>
    <input asp-for="Email" class="form-control"/>
    <span type="email" asp-validation-for="Email" class="text-danger"></span>
</div>
@if (User.Identity == null || !User.Identity.IsAuthenticated)
{
    <div class="form-group">

        <label asp-for="Password" class="control-label"></label>
        <input type="password" class="form-control" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
}
else
{
    <input type="hidden" class="form-control" asp-for="Password" value="dezeisingevuld">
}
