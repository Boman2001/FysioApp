@model WebApp.Dtos.Patient.PatientDto
@if (User.IsInRole("Staff"))
{
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Preposition" class="control-label"></label>
        <input asp-for="Preposition" class="form-control"/>
        <span asp-validation-for="Preposition" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control"/>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control"/>
        <span type="email" asp-validation-for="Email" class="text-danger"></span>
    </div>
        <div class="form-group">
            <label asp-for="IdNumber" class="control-label"></label>
            <input class="form-control" asp-for="IdNumber">
            <span asp-validation-for="IdNumber" class="text-danger"></span>
        </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input class="form-control" asp-for="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDay" class="control-label"></label>
        <input type="date" class="form-control" asp-for="BirthDay">
        <span asp-validation-for="BirthDay" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Picture" class="control-label"></label>
        <input type="file" asp-for="Picture" class="form-control"/>
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>
<div class="form-group">
    <label asp-for="Gender" class="control-label"></label>
    <select class="form-control" asp-for="Gender">
        <option value="Male">Male</option>
        <option value="Female">Female</option>
        <option value="Other">Other</option>
    </select>
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>
}
else
{
    <input type="hidden"  asp-for="FirstName" class="form-control"/>
    <input type="hidden"  asp-for="Preposition" class="form-control"/>
    <input type="hidden"  asp-for="LastName" class="form-control"/>
    <input type="hidden"  asp-for="Email" class="form-control"/>
    <input type="hidden"  asp-for="IdNumber" class="form-control"/>
    <input type="hidden"  asp-for="PhoneNumber" class="form-control"/>
    <input type="hidden"  asp-for="BirthDay" class="form-control"/>
    <input type="hidden" asp-for="Gender" class="form-control"/>

    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control" disabled/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Preposition" class="control-label"></label>
        <input asp-for="Preposition" class="form-control" disabled/>
        <span asp-validation-for="Preposition" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control" disabled/>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" disabled/>
        <span type="email" asp-validation-for="Email" class="text-danger"></span>
    </div>
        <div class="form-group">
            <label asp-for="IdNumber" class="control-label"></label>
            <input class="form-control" asp-for="IdNumber" disabled>
            <span asp-validation-for="IdNumber" class="text-danger"></span>
        </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input class="form-control" asp-for="PhoneNumber" disabled>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDay" class="control-label"></label>
        <input type="date" class="form-control" asp-for="BirthDay" disabled>
        <span asp-validation-for="BirthDay" class="text-danger"></span>
    </div>
    <div class="form-group">
    <label asp-for="Gender" class="control-label"></label>
    <select class="form-control" asp-for="Gender" disabled>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
        <option value="Other">Other</option>
    </select>
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>
}
  
