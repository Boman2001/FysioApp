@model WebApp.Dtos.Models.PatientDto
  @Html.ValidationSummary(false, "", new {@class = "text-danger"})
<form asp-action="Create" asp-controller="Patient" method="Post" enctype="multipart/form-data" id="CreatePatientForm" asy>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Preposition" class="control-label"></label>
        <input asp-for="Preposition" class="form-control"/>
        <span asp-validation-for="Preposition" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control"/>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control"/>
        <span type="email" asp-validation-for="Email" class="text-danger"></span>
    </div>
        <div class="form-group">
            <label asp-for="IdNumber" class="control-label"></label>
            <input class="form-control" asp-for="IdNumber">
            <span asp-validation-for="IdNumber" class="text-danger"></span>
        </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input class="form-control" asp-for="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDay" class="control-label"></label>
        <input type="date" class="form-control" asp-for="BirthDay">
        <span asp-validation-for="BirthDay" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Picture" class="control-label"></label>
        <input type="file" asp-for="Picture" class="form-control"/>
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label"></label>
        <select class="form-control" asp-for="Gender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="col">
        <div class="form-group">
            <input type="submit" value="Register Account" class="btn btn-primary btn-user btn-block"/>
        </div>
    </div>
</form>