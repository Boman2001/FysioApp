@model WebApp.Dtos.Patient.PatientDto
<div class="col-4">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@Model.Picture" alt="Card image cap" style="height: 300px; width: 300px;object-fit: cover;">
        <div class="card-body">
            <h5 class="card-title">@Model.FirstName @Model.Preposition @Model.LastName</h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Patient Nummer : @Model.PatientNumber</li>
            <li class="list-group-item">Email : @Model.Email</li>
            <li class="list-group-item">Telefoon Nummer : @Model.PhoneNumber</li>
        </ul>
        <div class="card-body">
            <a href="Patient/Edit/@Model.Id" class="btn btn-primary">Edit</a>
            <a href="Patient/Details/@Model.Id" class="btn btn-primary">Details</a>
        </div>
    </div>
</div>
